FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// taken from blockMeshDict
box_h_center  #calc "${${FOAM_CASE}/system/blockMeshDict!box_width}*0.5";

resistdrop_r    1.5e-3;

defaultFieldValues
(
    volScalarFieldValue alpha.water     1
    volScalarFieldValue alpha.resist    0
    volScalarFieldValue C               1e-9
);

regions
(
    // resist droplet
    cylinderToCell
    {
        p1      ($box_h_center  -0.1    $box_h_center);
        p2      ($box_h_center  0.1     $box_h_center);
        radius  $resistdrop_r;
        fieldValues
        (
            volScalarFieldValue alpha.resist    1
            volScalarFieldValue alpha.water     0
            volScalarFieldValue C               0.5
        );
    }
);


// ************************************************************************* //
